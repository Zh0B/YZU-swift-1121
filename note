import SwiftUI

struct ContentView: View {
    @State var num: Int = 0
    @State var hand: [String] = ["✌🏻", "👊🏻", "🖐🏻", "🤌🏻", "🖖🏻"]
    @State var word: [String] = ["剪刀", "石頭", "布", "蜥蜴", "史巴克"]

    var body: some View {
        ZStack {
            LinearGradient(gradient: Gradient(colors: [Color.blue, Color.purple]), startPoint: .top, endPoint: .bottom) // 使用渐变背景
                .edgesIgnoringSafeArea(.all)

            VStack {
                Text(hand[num])
                    .font(.system(size: 70))
                    .frame(width: 300, height: 100, alignment: .center)
                    .padding(.all, 10)
                    .foregroundColor(.white)

                Button(action: {
                    num = Int.random(in: 0...4)
                }, label: {
                    Text("Go")
                        .frame(width: 300, height: 100, alignment: .center)
                        .font(.system(size: 70))
                        .foregroundColor(.yellow)
                        .fontWeight(.heavy)
                        .background(Color.gray)
                        .cornerRadius(20)
                })

                Text(word[num])
                    .font(.system(size: 50))
                    .frame(width: 200, height: 100, alignment: .center)
                    .padding(.all, 10)
                    .foregroundColor(.red)
            }
        }
    }
}

@main
struct YourApp: App {
    var body: some Scene {
        WindowGroup {
            ContentView()
        }
    }
}
