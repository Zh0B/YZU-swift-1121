import SwiftUI

struct ContentView: View {
    @State var num: Int = 0
    @State var hand: [String] = ["âœŒğŸ»", "ğŸ‘ŠğŸ»", "ğŸ–ğŸ»", "ğŸ¤ŒğŸ»", "ğŸ––ğŸ»"]
    @State var word: [String] = ["å‰ªåˆ€", "çŸ³é ­", "å¸ƒ", "èœ¥èœ´", "å²å·´å…‹"]

    var body: some View {
        ZStack { // ä½¿ç”¨ ZStack åŒ…è£…æ•´ä¸ªè§†å›¾
            Color.blue // è®¾ç½®æ•´ä¸ªèƒŒæ™¯é¢œè‰²
                .ignoresSafeArea(.all) // å¿½ç•¥å®‰å…¨åŒºåŸŸ

            VStack {
                Text(hand[num])
                    .font(.system(size: 70))
                    .frame(width: 300, height: 100, alignment: .center)
                    .padding(.all, 10)
                    .foregroundColor(.white)

                Button(action: {
                    num = Int.random(in: 0...4)
                }, label: {
                    Text("Go")
                        .frame(width: 300, height: 100, alignment: .center)
                        .font(.system(size: 70))
                        .foregroundColor(.yellow)
                        .fontWeight(.heavy)
                        .background(Color.gray)
                        .cornerRadius(20)
                })

                Text(word[num])
                    .font(.system(size: 50))
                    .frame(width: 200, height: 100, alignment: .center)
                    .padding(.all, 10)
                    .foregroundColor(.red)
            }
        }
    }
}

@main
struct YourApp: App {
    var body: some Scene {
        WindowGroup {
            ContentView()
        }
    }
}
